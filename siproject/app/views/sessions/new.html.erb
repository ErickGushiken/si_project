          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="actions options-row">
          <%= submit_tag "Login", class:"waves-effect waves-light btn-small" %>
        </div>
      <% end %>
      </div>
      <div class="horizontal-line"></div>
